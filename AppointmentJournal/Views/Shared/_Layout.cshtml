<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark p-3">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">@ViewBag.Title</a>
        @{
            if (ViewBag.PageType != null && ViewBag.PageType != "")
            {
                <div class="navbar-nav">
                    <p3 class="navbar-brand text-primary"> - </p3>
                </div>
                <div class="navbar-nav">
                    <p3 class="navbar-brand text-primary" href="#">@ViewBag.PageType</p3>
                </div>
            }
        }
        <a class="btn btn-sm btn-secondary navbar-btn ml-auto mr-1" asp-controller="Account" asp-action="Profile"><p2>PROFILE</p2></a>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
