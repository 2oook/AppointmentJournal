@model Service

<div class="card card-outline-primary p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge" style="float:right">
                <small>Стоимость : @Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="bg-faded p-1">
        Длительность : @Model.Duration мин.
        <form id="@Model.Id" asp-action="ChooseDay" asp-controller="Consumer" method="get">
            <input type="hidden" name="serviceId" asp-for="Id" />
            <span class="card-text p-1">
                <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">ЗАПИСАТЬСЯ</button>
            </span>
        </form>
    </div>
</div>

