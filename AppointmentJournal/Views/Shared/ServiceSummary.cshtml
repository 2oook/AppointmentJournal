@model Service

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge" style="float:right">
                <small>Стоимость : @Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="bg-faded p-1">
        Длительность : @Model.Duration мин.
        <span class="card-text p-1">
            <a asp-controller="Consumer" asp-action="Book" class="btn btn-success btn-sm pull-right" style="float:right">ЗАПИСАТЬСЯ</a>
        </span>
    </div>
</div>

