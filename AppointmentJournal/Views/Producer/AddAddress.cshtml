@model AddressViewModel

@{
    ViewBag.Title = CommonConstants.AppNameUpperCase;
    ViewBag.PageType = "Добавление адреса";
}

<div class="text-danger m-1 p-1 " asp-validation-summary="All"></div>

<div class="badge p-1 m-1">
    <form asp-controller="Producer" asp-action="AddAddress" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <table class="table table-striped table-bordered table-sm">
            <tbody>
                <tr>
                    <td class="text-center p-2">
                        <div class="form-group">
                            <input asp-for="Address.AddressValue" class="form-control" />
                            <span asp-validation-for="Address.AddressValue" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="badge">
            <input class="btn btn-primary" type="submit" value="Подтвердить" />
        </div>
    </form>
</div>