@model ManageServicesViewModel

@{
    ViewBag.Title = Constants.AppNameUpperCase;
    ViewBag.PageType = "Управление услугами";
}

<h4 class="p-2 m-2">Редактирование списка услуг</h4>

<div class="m-1 p-1">

    @foreach (var service in Model.ServicesList)
    {
        <div class="overflow-auto p-1 m-1">
            <table class="table table-striped table-bordered table-sm">
                <thead>
                    <tr class="text-center">
                        <th>Категория</th>
                        <th>Наименование</th>
                        <th>Время (мин)</th>
                        <th>Цена (руб)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center text-wrap p-2">
                            @service.Category.Name
                        </td>
                        <td class="text-center text-wrap p-2">
                            @service.Name
                        </td>
                        <td class="text-center p-2">
                            @service.Duration
                        </td>
                        <td class="text-center p-2">
                            @service.Price
                        </td>
                        <td class="text-center p-2">
                            <div class="m-1">
                                <form asp-controller="Producer" asp-action="ManageService" method="get">
                                    <input type="hidden" name="serviceID" value="@service.Id" />
                                    <button type="submit" class="btn btn-sm btn-primary container-fluid">
                                        Управлять
                                    </button>
                                </form>
                            </div>

                            <div class="m-1">
                                <form asp-controller="Producer" asp-action="EditService" method="get">
                                    <input type="hidden" name="serviceID" value="@service.Id" />
                                    <button type="submit" class="btn btn-sm btn-info container-fluid">
                                        Редактировать
                                    </button>
                                </form>
                            </div>

                            <div class="m-1">
                                <form asp-controller="Producer" asp-action="RemoveService" method="post">
                                    <input type="hidden" name="serviceID" value="@service.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger p-1">
                                        Удалить
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    <div class="flex-fill p-1 m-1">
        <a class="btn btn-sm btn-info" asp-controller="Producer" asp-action="AddService">Добавить сервис</a>
    </div>

</div>
