@model ServiceViewModel

@{
    ViewBag.Title = Constants.AppNameUpperCase;
    ViewBag.PageType = "Добавление услуги";
}

<div class="badge p-1 m-1">
    <form asp-controller="Producer" asp-action="AddService" method="post">
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr class="text-center">
                    <th>Категория</th>
                    <th>Наименование</th>
                    <th>Время (мин)</th>
                    <th>Цена (руб)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center p-2">
                        <div class="form-group">
                            <input asp-for="Category.Name" class="form-control" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>
                    </td>
                    <td class="text-center p-2">
                        <div class="form-group">
                            <input asp-for="Service.Name" class="form-control" />
                            <span asp-validation-for="Service.Name" class="text-danger"></span>
                        </div>
                    </td>
                    <td class="text-center p-2">
                        <div class="form-group">
                            <input asp-for="Service.Duration" class="form-control" />
                            <span asp-validation-for="Service.Duration" class="text-danger"></span>
                        </div>
                    </td>
                    <td class="text-center p-2">
                        <div class="form-group">
                            <input asp-for="Service.Price" class="form-control" />
                            <span asp-validation-for="Service.Price" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="badge">
            <input class="btn btn-primary" type="submit" value="Подтвердить" />
        </div>
    </form>
</div>